<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp"
    android:gravity="center_horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/foto_autor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/foto_al"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/naranja"/>
    <!--<ImageView
        android:id="@+id/foto_autor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/foto_al"></ImageView>-->
    <TextView
        android:id="@+id/nombre_autor"
        android:text="Alberto Morales"
        android:textSize="18sp"
        android:gravity="left|center_vertical"
        android:paddingLeft="5dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        ></TextView>
    <ImageView
        android:id="@+id/logo_linkedin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:src="@drawable/linkedin"></ImageView>
    <ImageView
        android:id="@+id/logo_github"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:src="@drawable/logogithub"></ImageView>

</LinearLayout>